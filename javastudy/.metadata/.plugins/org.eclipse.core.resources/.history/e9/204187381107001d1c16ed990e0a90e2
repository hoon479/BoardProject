package ex03_number;

public class Ex01 {

	public static void main(String[] args) {
		
		// 산술 연산
		int a = 7;
		int b = 2;
		int result1 = a + b;
		int result2 = a - b;
		int result3 = a * b;
		int result4 = a / b; // 몫을 구할때 /를  쓴다.
		int result5 = a % b; // 나머지를 구할떄 % 쓴다.
		System.out.println(result1);
		System.out.println(result2);
		System.out.println(result3);
		System.out.println(result4);
		System.out.println(result5);
		
		// 연습
		// 25을 2와 5로 나눠보기
		 
		int c = 25;
		int d = 5;
		int e = 2;
		int sum1 = c / e;
		int sum2 = c % d;
		System.out.println(sum1);
		System.out.println(sum2);
		
		int ten =              //2
	    int one =             //5

	}

}
